<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <div class="container text-center">
                <p><span class="glyphicon glyphicon-envelope" ></span> <%= @user.email %></p>
                <p><span class="glyphicon glyphicon-map-marker" ></span> <%= @user.area %></p>
                <p> about me</p>
                <p><%= @user.profile %></p>
            </div>
            <div class="col-md-6">
                <%= link_to "Followings",{ controller: "users", action: "followings"} %>
                <div> <%= @followings.length %></div>
            </div>
            <div class="col-md-6">
                <%= link_to "Followers",{ controller: "users", action: "followers"} %>
                <div> <%= @followers.length %></div>
            </div>
        </section>
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
            <h3>Microposts (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
        <% end %>
    </div>
</div>


