<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1 id="user-info">
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <address>
                <p><span class="glyphicon glyphicon-envelope" ></span> <%= @user.email %></p>
                <p><span class="glyphicon glyphicon-map-marker" ></span> <%= @user.area %></p>
                <p> about me</p>
                <p><%= @user.profile %></p>
            </address>
            <div class="col-md-4">
                <%= link_to "Followings",{ controller: "users", action: "followings"} %>
                <div> <%= @followings.length %></div>
            </div>
            <div class="col-md-4">
                <%= link_to "Followers",{ controller: "users", action: "followers"} %>
                <div> <%= @followers.length %></div>
            </div>
            <div class="col-md-4">
                <%= link_to "Like",{controller: "likes", action:"show"} %>
                <div> <%= @likes.length %></div>
            </div>
        </section>
    </aside>
    <div class="col-md-8">
        <h1><%= @user.name %> <%= @title %></h1>
        <% @users.each do |f| %>
            <div class="container">
                <%= gravatar_for f %> 
                <%= link_to f.name, f %>
            </div>
        <% end %>
    </div>
</div>


